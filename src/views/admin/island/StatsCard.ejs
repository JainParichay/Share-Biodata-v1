<div class="bg-white rounded-lg shadow p-6">
  <div class="flex items-center">
    <div class="p-3 rounded-full bg-indigo-600 bg-opacity-75">
      <!-- Dynamic icon based on props -->
      <% if (icon === 'users') { %>
      <svg
        class="h-8 w-8 text-white"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <!-- Users icon -->
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.196M15 21V11h6v10z"
        />
      </svg>
      
      <% } else if (icon === 'files') { %>
      <svg
        class="h-8 w-8 text-white"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
      </svg>
      <!-- Files icon -->
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
          d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.196M15 21V11h6v10z"
        />
      </svg>
      <% } %>
    </div>
    <div class="ml-4">
      <p class="mb-2 text-sm font-medium text-gray-600"><%= title %></p>
      <p class="text-lg font-semibold text-gray-700"><%= value %></p>
    </div>
  </div>
</div>
